sap.ui.define([
    "sap/ui/core/UIComponent",
    "sap/ui/Device"
], function (UIComponent, Device) {
    "use strict";

    return UIComponent.extend("protosample.Component", {
        metadata: {
            manifest: "json",
            interfaces: [
                "sap.ui.core.IAsyncContentCreation"
            ]
        },

        init: function () {

            // 1. Load shared UI5 library (FLP + HTML5 Repo safe)
            if (location.host.indexOf("studio") > -1) {
                // BAS / local
                sap.ui.getCore().loadLibrary(
                    "sap.btp.ui5lib",
                    "/sapbtpui5lib/sap/btp/ui5lib"
                );
            } else {
                // Launchpad + HTML5 App Repo
                sap.ui.getCore().loadLibrary(
                    "sap.btp.ui5lib",
                    "/cscsapbtpui5lib.sapbtpui5lib/resources/sap/btp/ui5lib"
                );
            }

            // 2. Call base component init
            UIComponent.prototype.init.apply(this, arguments);

            // 3. Device model
            var oDeviceModel = new sap.ui.model.json.JSONModel(Device);
            oDeviceModel.setDefaultBindingMode("OneWay");
            this.setModel(oDeviceModel, "device");

            // 4. Router
            this.getRouter().initialize();
        }
    });
});