
_schema-version: 3.3.0
ID: CICD_Capm
version: 1.0.0
description: "A simple CAP project."
parameters:
  enable-parallel-deployments: true

build-parameters:
  before-all:
    - builder: custom
      commands:
        - npm ci
        - npx cds build --production

modules:
  - name: CICD_Capm-srv
    type: nodejs
    path: gen/srv
    parameters:
      instances: 1
      buildpack: nodejs_buildpack
    build-parameters:
      builder: npm-ci
    provides:
      - name: srv-api # required by consumers of CAP services (e.g. approuter/content module)
        properties:
          srv-url: ${default-url}
    requires:
      - name: CICD_Capm-db

  - name: CICD_Capm-db-deployer
    type: hdb
    path: gen/db
    parameters:
      buildpack: nodejs_buildpack
    requires:
      - name: CICD_Capm-db

  # --- Destination Content Module (creates subaccount-level destination) ---
  - name: CICD_Capm-destination-content
    type: com.sap.application.content
    requires:
      # Consume the srv-url from the CAP service
      - name: srv-api
      # Target the destination service resource to publish content at subaccount level
      - name: CICD_Capm-destination
        parameters:
          content:
            subaccount:
              destinations:
                - Name: CICD_Capm-srv
                  Description: "Destination to CAP service (srv) for CICD_Capm"
                  Type: HTTP
                  ProxyType: Internet
                  Authentication: NoAuthentication
                  URL: ~{srv-api/srv-url}
                  # Optional HTML5 attributes if you plan to use HTML5 apps
                  HTML5.Forbidden: false
                  HTML5.Timeout: 60000
              # Change to 'update' if you want to overwrite an existing destination with same name
              existing_destinations_policy: ignore
    parameters:
      content:
        # Logical name shown in subaccount > Destination Content
        instance_name: CICD_Capm-destination-content

resources:
  - name: CICD_Capm-db
    type: com.sap.xs.hdi-container
    parameters:
      service: hana
      service-plan: hdi-shared

  # Destination service instance to host subaccount-level destinations
  - name: CICD_Capm-destination
    type: org.cloudfoundry.managed-service
    parameters:
      service: destination
      service-plan: lite
