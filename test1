_schema-version: 3.3.0
ID: samplecap
version: 1.0.0
description: CAP service with destination exposure

parameters:
  enable-parallel-deployments: true

build-parameters:
  before-all:
    - builder: custom
      commands:
        - npm ci
        - npx cds build --production

modules:
  # CAP Service
  - name: samplecap-srv
    type: nodejs
    path: gen/srv
    parameters:
      instances: 1
    build-parameters:
      builder: npm-ci
    provides:
      - name: srv-api
        properties:
          srv-url: ${default-url}
    requires:
      - name: samplecap-db
      - name: samplecap-xsuaa

  # DB Deployer
  - name: samplecap-db-deployer
    type: hdb
    path: gen/db
    requires:
      - name: samplecap-db

  # Destination content (THIS is the key)
  - name: samplecap-destination-content
    type: com.sap.application.content
    requires:
      - name: samplecap-destination
        parameters:
          content-target: true
      - name: srv-api
      - name: samplecap-xsuaa
    parameters:
      content:
        instance:
          destinations:
            - Name: samplecap-srv
              URL: ~{srv-api/srv-url}
              Authentication: OAuth2UserTokenExchange
              ProxyType: Internet
              Type: HTTP
              sap.cloud.service: samplecap
          existing_destinations_policy: update
    build-parameters:
      no-source: true

resources:
  # HANA
  - name: samplecap-db
    type: com.sap.xs.hdi-container
    parameters:
      service: hana
      service-plan: hdi-shared

  # XSUAA
  - name: samplecap-xsuaa
    type: org.cloudfoundry.managed-service
    parameters:
      service: xsuaa
      service-plan: application
      path: ./xs-security.json

  # Destination service
  - name: samplecap-destination
    type: org.cloudfoundry.managed-service
    parameters:
      service: destination
      service-plan: lite