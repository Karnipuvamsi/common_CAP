_schema-version: 3.3.0
ID: CICD_Capm
version: 1.0.0
description: "A simple CAP project."
parameters:
  enable-parallel-deployments: true

build-parameters:
  before-all:
    - builder: custom
      commands:
        - npm ci
        - npx cds build --production

modules:
  # ------------------- CAP Service -------------------
  - name: CICD_Capm-srv
    type: nodejs
    path: gen/srv
    parameters:
      instances: 1
      buildpack: nodejs_buildpack
    build-parameters:
      builder: npm-ci
    provides:
      - name: srv-api
        properties:
          srv-url: ${default-url}
    requires:
      - name: CICD_Capm-db

  # ------------------- DB Deployer -------------------
  - name: CICD_Capm-db-deployer
    type: hdb
    path: gen/db
    parameters:
      buildpack: nodejs_buildpack
    requires:
      - name: CICD_Capm-db


  # ------------------- Destination Content -------------------
  - name: CICD_Capm-destination-content
    type: com.sap.application.content
    requires:
      - name: srv-api
      - name: CICD_Capm-destination
        parameters:
          content:
            instance:
              destinations:
                - Name: CICD_Capm-srv
                  Description: "Destination to CAP service (no auth)"
                  Type: HTTP
                  ProxyType: Internet
                  Authentication: NoAuthentication
                  URL: ~{srv-api/srv-url}
              existing_destinations_policy: update
    parameters:
      content:
        instance_name: CICD_Capm-destination-content
    build-parameters:
      no-source: true


# ------------------- Resources -------------------
resources:
  - name: CICD_Capm-db
    type: com.sap.xs.hdi-container
    parameters:
      service: hana
      service-plan: hdi-shared

  - name: CICD_Capm-destination
    type: org.cloudfoundry.managed-service
    parameters:
      service: destination
      service-plan: lite